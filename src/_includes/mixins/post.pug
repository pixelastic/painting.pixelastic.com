mixin post(post, options = {})
  +brick.relative
    - const editUrl = `https://github.com/pixelastic/painting.pixelastic.com/edit/master/src/${post.slug}/index.md`
    a.absolute.top-0.right-0.mt-1.mr-1.gray-5.pointer.hover_gray-8.transition-color(href=editUrl, target="_blank") Found a typo?
    h1.text-6.bold
      +link(href=post.slug)=post.title
    .flrnw.text-2
      .fln.italic.opacity-50p=post.displayDate
      .fln
        .inline.opacity-50p.mx-01 in
        each tag in post.tags
          +link.inline.blue.mr-01(href=`${url.pathToRoot}tags/${tag}/`)=tag
    .prose.md_prose-lg.lg_prose-lg.pt-1!=markdown(post.body, options)
